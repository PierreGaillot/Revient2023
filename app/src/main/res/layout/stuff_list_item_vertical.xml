<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/stuffListItemVertical_stuffImg_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stuffListItemVertical_progressBar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/stuffListItemVertical_diplayName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            android:textColor="@android:color/primary_text_light"
            android:textSize="20sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stuffListItemVertical_borrowerImg_imageView"
                android:layout_width="28dp"
                android:layout_height="28dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/stuffListItemVertical_borrowerName_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/stuffListItemVertical_progressBar"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:indeterminateOnly="false"
        android:rotation="180"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:visibility="invisible"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>